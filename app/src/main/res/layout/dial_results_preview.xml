    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/retryRecognitionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewCarouselContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.riczz.meterreader.view.SettingSliderComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Sigma X:"
                app:stepSize="1.0"
                app:valueMax="100.0"
                app:valueMin="0.0" />

            <com.riczz.meterreader.view.SettingSliderComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Blur Kernel Size:"
                app:stepSize="2.0"
                app:valueMax="7.0"
                app:valueMin="3.0" />

            <com.riczz.meterreader.view.SettingComboBoxComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Morphology Kernel Type:" />

            <com.riczz.meterreader.view.SettingSliderComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Threshold Value:" />

            <com.riczz.meterreader.view.SettingSliderComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Minimum Contour Area:"
                app:stepSize="10.0"
                app:valueMax="1000.0"
                app:valueMin="0.0" />

            <com.riczz.meterreader.view.SettingSliderComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Maximum circularity:"
                app:stepSize="0.01"
                app:valueMax="1.0"
                app:valueMin="0.0" />

            <com.riczz.meterreader.view.SettingSliderComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:infoDescription="@string/info_sigmaX"
                app:propertyName="Dial Frame Width Multiplier:"
                app:stepSize="0.01"
                app:valueMax="5.0"
                app:valueMin="1.0" />

            <com.riczz.meterreader.view.SettingComboBoxComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                app:propertyName="Blur Sigma X:" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
